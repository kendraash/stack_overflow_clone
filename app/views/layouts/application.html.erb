<!DOCTYPE html>
<html>
<head>
  <title>StackOverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Stack Overflow</a>
      </div>

       <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <% if current_user.is_admin %>
            <li><%= link_to 'Admin', admin_path %></li>
          <% end %>
          <li><%= link_to 'Your Profile', user_path(current_user) %></li>
          <li><%= link_to "Sign Out", sign_out_path, {:id => "nav-sign-out"} %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_user_path, {:id => "nav-sign-up"} %></li>
          <li><%= link_to "Sign In", sign_in_path, {:id => "nav-sign-in"} %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <%= flash[:alert] %>
  <%= flash[:notice] %>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
