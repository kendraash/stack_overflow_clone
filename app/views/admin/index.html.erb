
<h1>Admin</h1>

<h3>Questions</h3>
<ul>
  <% @questions.each do |question| %>
    <li>
      <%= link_to "#{question.title} by #{question.user.username}, #{question.created_at.strftime("created on %m/%d/%Y at %I:%M%p")}", question_path(question) %>
      | <%= link_to "Delete", question_path(question), :data => {:confirm => "Are you sure?", :method => "delete"} %> |
      <%= link_to "Edit", edit_question_path(question) %>
    </li>
    <ul>
      <% question.answers.each do |answer| %>
      <li>
        <%= link_to "#{answer.content} by #{answer.user.username}, #{answer.created_at.strftime("created on %m/%d/%Y at %I:%M%p")}", question_path(question) %>
        | <%= link_to "Delete", question_answer_path(question, answer), :data => {:confirm => "Are you sure?", :method => "delete"} %> |
        <%= link_to "Edit", edit_question_answer_path(question, answer) %>
      </li>
      <% end %>
    </ul>
  <% end %>
</ul>


